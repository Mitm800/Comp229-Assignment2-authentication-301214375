<head>
    <title>
        <%= title %>
    </title>
    <link rel='stylesheet' href='/Content/stylesheets/style.css' />
    <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/@fortawesome/fontawesome-free/css/all.min.css">
</head>
<!--Edit contact Info page-->

<body>
    <header>
        <%- include('../components/header.ejs'); %>
    </header>
    <div class='container'>
        <div class='row'>
            <div class='offset-md-3 col-md-100'>
                <h1>
                    <%= title%>
                </h1>
                <form class="form" method="post">
                    <div class="form-group">
                        <label class="des2" for="nameTextField">Name</label>
                        <input type="text" class="form-control" id="nameTextField" value="<%=contact.name%>" placeholder="Contact Name" name="name" required>
                    </div>
                    <div class="form-group">
                        <label class="des2" for="numberTextField">Number</label>
                        <input type="number" class="form-control" id="numberTextField" value="<%=contact.number%>" placeholder="Contact Number" name="number" required>

                    </div>
                    <div class="form-group">
                        <label class="des2" for="emailTextField">Email</label>
                        <input type="email" class="form-control" id="emailTextField" value="<%=contact.email%>" placeholder="Contact Email" name="email" required>
                    </div>
                    <br><br>
                    <button class="btn btn-primary" type="submit">Submit</button>
                    <a href="/contactList" class="btn btn-warning"><i class="fas fa-undo">Cancel</i></a>
                </form>
            </div>
        </div>
    </div>

    <header>
        <%- include('../components/footer.ejs'); %>
    </header>
</body>