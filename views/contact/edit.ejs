<head>
    <title>
        <%= title %>
    </title>
    <link rel='stylesheet' href='/Content/stylesheets/style.css' />
    <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/@fortawesome/fontawesome-free/css/all.min.css">
</head>

<body>
    <header>
        <%- include('../components/header.ejs'); %>
    </header>
    <div class='container'>
        <div class='row'>
            <div class='offset-md-3 col-md-100'>
                <h1>
                    <%= title%>
                </h1>
                <form class="form" method="post">
                    <div class="form-group">
                        <label for="nameTextField">Name</label>
                        <input type="text" class="form-control" id="nameTextField" value="<%= contact.name  %> " placeholder="Enter Name" name="name" required>
                    </div>
                    <div class="form-group">
                        <label for="numberTextField">Number</label>
                        <input type="text" class="form-control" id="numberTextField" value="<%= contact.number  %> " placeholder="<Enter Number>" name="number" required>
                    </div>
                    <div class="form-group">
                        <label for="emailTextField">E-mail</label>
                        <input type="text" class="form-control" id="emailTextField" value="<%= contact.email  %> " placeholder="Enter E-mail" required>
                    </div>

                    <buttton class='btn btn-primary' type="submit">
                        <i class="fas fa-edit">Submit</i>
                    </buttton>

                    <a href="/contactList" class="btn btn-warning"><i class="fas fa-undo">Cancel</i></a>
                </form>
            </div>
        </div>
    </div>

    <header>
        <%- include('../components/footer.ejs'); %>
    </header>
</body>